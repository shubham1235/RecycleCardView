<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car_view_id"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:padding="10dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/card_fruit_imageView_id"
                android:scaleType="fitXY"
                android:src="@drawable/apple"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
            <TextView
                android:id="@+id/card_fruit_name_id"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/card_fruit_imageView_id"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Apple" />

            <TextView
            android:id="@+id/card_fruit_small_description_id"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:text="Apple 40Rs/kg" />


        </RelativeLayout>
        
    </android.support.v7.widget.CardView>
    
</RelativeLayout>